<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.seek.media.record.view.RecordPreviewView
        android:id="@+id/media_record_preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.seek.media.record.view.RecordFinishView
        android:id="@+id/media_record_finish_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.seek.media.record.view.RecordSendView
        android:id="@+id/media_record_send_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_kb_default_background"
    tools:context="com.xiu8.kb.model.task.ui.KBTaskActivity">

    <com.seek.library.widget.toolbar.SeekToolBar
        android:id="@+id/prom_create_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/common_btn_back_white" />


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/kb_task_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/prom_create_tool_bar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/kb_task_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>

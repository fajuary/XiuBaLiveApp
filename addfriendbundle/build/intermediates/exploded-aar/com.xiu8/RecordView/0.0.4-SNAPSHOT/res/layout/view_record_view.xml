<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/record_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:src="@drawable/red_record_radius" />

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/record_donut_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:rotation="-90"
        custom:donut_finished_color="#FF22B6FE"
        custom:donut_finished_stroke_width="4dp"
        custom:donut_show_text="false"
        custom:donut_unfinished_color="#FFE5E7EF"
        custom:donut_unfinished_stroke_width="4dp" />



</RelativeLayout>